@model Domain.Entities.ShoppingDetails

@{
    ViewBag.Title = "BookStore: Order form";
}

<h2>Order</h2>
<p>Please, Enter your contacts.</p>

@using (Html.BeginForm())
{
    @Html.ValidationSummary();
    <h3>Data</h3>
    <div class="form-group">
        <label>Your name:</label>
        @Html.TextBoxFor(x => x.Name, new { @class = "form-control" })
    </div>

    <h3>Your adress</h3>
    <div class="form-group">
        <label>First adress:</label>
        @Html.TextBoxFor(x => x.Line1, new { @class = "form-control" })
    </div>
    <div class="form-group">
        <label>Secon adress:</label>
        @Html.TextBoxFor(x => x.Line2, new { @class = "form-control" })
    </div>
    <div class="form-group">
        <label>Third adress:</label>
        @Html.TextBoxFor(x => x.Line3, new { @class = "form-control" })
    </div>
    <div class="form-group">
        <label>Sity:</label>
        @Html.TextBoxFor(x => x.City, new { @class = "form-control" })
    </div>
    <div class="form-group">
        <label>Country:</label>
        @Html.TextBoxFor(x => x.Country, new { @class = "form-control" })
    </div>

    <h3>Option</h3>
    <div class="form-group">
        <label>
            @Html.EditorFor(x => x.GiftWrap)
            Use gift wrap
        </label>        
    </div>

    <div class="text-center">
        <input class="btn btn-primary" type="submit" value="Treat this order"/>
    </div>
}